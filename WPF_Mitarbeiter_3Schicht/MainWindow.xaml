<Window x:Class="WPF_Mitarbeiter_3Schicht.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Mitarbeiter_3Schicht"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="125*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2">
            <DataGrid x:Name="mitarbeiterDataGrid" AutoGenerateColumns="True" Margin="23,60,23,60">
            </DataGrid>
        </Border>

        <TextBox Name="SearchBox" Margin="0,38,848,0" TextChanged="SearchBox_TextChanged" Height="16" VerticalAlignment="Top" Grid.Column="1" />
    </Grid>
</Window>
